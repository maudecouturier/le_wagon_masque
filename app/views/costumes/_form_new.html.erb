<%= simple_form_for(@costume) do |f| %>
  <%= f.input :title, label: false, placeholder: "Title" %>
  <%= f.input :description %>
  <%= f.input :size, prompt: "Choose your size", collection: Costume::SIZE %>
  <%= f.input :theme, prompt: "Choose a theme", collection: Costume::THEMES %>
  <%= f.input :location %>
  <%= f.input :price, placeholder: "Price per day" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
