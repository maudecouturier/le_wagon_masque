<div class="row">
  <h2><%= @costume.description %> EDIT</h2>
</div>

<div class="row justify-content-center">
  <div class="col-6">
    <%= simple_form_for(@costume) do |f| %>
      <%= f.input :description %>
      <%= f.input :gender %>
      <%= f.input :size %>
      <%= f.input :theme %>
      <%= f.input :location %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
