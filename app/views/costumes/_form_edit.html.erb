<%= simple_form_for(@costume) do |f| %>
  <%= f.input :title, label: false, placeholder: "Title" %>
  <%= f.input :description, label: false %>
  <%= f.input :gender, label: false, prompt: "Choose your gender",collection: Costume::GENDER %>
  <%= f.input :size, label: false, prompt: "Choose your size", collection: Costume::SIZE %>
  <%= f.input :theme, label: false, prompt: "Choose a theme", collection: Costume::THEMES %>
  <%= f.input :location, label: false, placeholder: "Location" %>
  <%= f.input :price, label: false, placeholder: "Price per day" %>
  <%= f.input :photo, as: :file, label: false %>
  <%= f.button :submit, class: "btn btn-danger text-center"%>
<% end %>
