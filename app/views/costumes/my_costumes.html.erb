<div class="container main_container my-4">
  <div class="pb-5" name="upper-part-booking-requests">
    <h3>My bookings</h3>
      <h5 class='mt-5 mb-4'>Pending:</h5>
      <div class="bookings-container col-8">
        <% @my_costumes.each do |costume| %>

            <% costume.bookings.each do |booking| %>
              <% if booking.status == 'pending' %>
          <div class='booking d-flex'>

                <div class="d-flex justify-content-between">
                  <li class="list-unstyled">
                    <%= booking.start_date %> -
                    <%= booking.end_date %>
                  </li>
                  <div class="d-flex">
                      <%= link_to approve_booking_path(booking), remote: true, data: { turbolinks: false } do %>
                      <i class="fas fa-check mx-2 text-white"></i>
                      <% end %>
                      <%= link_to deny_booking_path(booking), remote: true, data: { turbolinks: false } do %>
                      <i class="fas fa-window-close text-white"></i>
                      <% end %>
                  </div>
                </div>

          </div>
              <% end %>
            <% end %>
        <% end %>
      </div>



  </div>

  <div>

  </div>



</div>
