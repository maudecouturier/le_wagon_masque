<h1 style="padding-left: 7px">üßü‚Äç‚ôÄÔ∏èMy costumesü¶∏üèª‚Äç‚ôÇÔ∏è</h1>

<%= link_to "üßôüèª‚Äç‚ôÇÔ∏èAdd a costume", new_costume_path, {:style=>'padding-left: 8px; text-decoration:none; color:grey;'}  %>
  <% @my_costumes.each do |costume| %>
    <div class="row align-items-center">
    <div class="col-8">
      <div class="card-product">
        <%= cl_image_tag costume.photo.key, crop: :fill if costume.photo.attached? %>
        <div class="card-infos-btn d-flex flex-column">
          <div class="card-product-infos">
            <h2 style="font-size: 24px"><%= costume.title %></h2>
            <p>Description : <%= costume.description %></p>
            <p>Cat√©gorie : <%= costume.theme.capitalize %></p>
            <p>Taille : <%= costume.size %></p>
            <p>Genre : <%= costume.gender %></p>
            <p>Prix : <%= costume.price %> ‚Ç¨/jour</p>
          </div>
         <div class="card-buttons">
           <%= link_to raw('<i class="fas fa-paint-brush"></i> Edit'), edit_costume_path(costume) %>
           <%= link_to raw('<i class="fas fa-skull"></i> Delete'),
              costume_path(costume),
              method: :delete,
              data: { confirm: "Are you sure?" }
              %>
         </div>
       </div>
      </div>
    </div>
    <div class="card-booking-requests col-4" text><h4>Booking requests</h4>
        <div class="card-booking-status">
          <ul class="p-1"> Pending:
          <% costume.bookings.select do |booking|  %>
            <% if booking.status == 'pending' %>
              <li>
                <%= booking.start_date %> -
                <%= booking.end_date %>
              </li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <div class="card-booking-status">
          <ul class="p-1"> Approved:
          <% costume.bookings.select do |booking|  %>
            <% if booking.status == 'approved' %>
              <li>
                <%= booking.start_date %> -
                <%= booking.end_date %>
              </li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <div class="card-booking-status">
          <ul class="p-1"> Denied:
          <% costume.bookings.select do |booking|  %>
            <% if booking.status == 'denied' %>
              <li>
                <%= booking.start_date %> -
                <%= booking.end_date %>
              </li>
            <% end %>
          </ul>
          <% end %>
        </div>
    </div>
  </div>
    <% end %>
