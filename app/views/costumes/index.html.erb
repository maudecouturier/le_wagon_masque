<div style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= image_path 'https://images.unsplash.com/photo-1513151233558-d860c5398176?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80'%>')">
  <div class="container main_container">
    <div class="row" style= "position: relative;">
      <div class=col-7>
        <div class="cards" name='cards-grid'>
          <% @costumes.each do |costume| %>
            <%= link_to costume_path(costume), class: "card-links" do %>
                <div class="card-costume">
                  <div class="image">
                    <%= cl_image_tag costume.photo.key, class: 'card-costume-image' if costume.photo.attached? %>
                    <h6 class="card-trip-pricing text-black"><%= costume.price %>â‚¬</h6>
                  </div>
                  <div class="card-costume-infos">
                    <div>
                      <h6><%= costume.title.capitalize%></h6>
                    </div>
                  </div>
                </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="col-5">
        <div id="map"
         style="width: 100%;
         height: calc(100vh - 120px); position: sticky; top: 80px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
         </div>
      </div>

    </div>

  </div>

</div>

