<div class="row">
  <h1>Costumes #index</h1>
</div>

<div class="row">
  <div class="cards">
    <% @costumes.each do |costume| %>
      <%= link_to costume_path(costume), :class => "text-decoration-none" do %>
          <div class="card-costume text-decoration-none">
            <%= cl_image_tag costume.photo.key, crop: :fill if costume.photo.attached? %>
            <div class="card-costume-infos">
              <div>
                <h2><%= costume.description%></h2>
              </div>
              <div class="d-flex justify-content-between">
                <p><%= costume.theme %></p>
                <h2 class="card-trip-pricing"><%= costume.price %> â‚¬/jour</h2>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>

  </div>
</div>

